# Copy this file to .env and fill in the required values as needed.
# Only set the keys for the provider you plan to use.

# LLM provider selection: "claude" or "gemini"
LLM_PROVIDER=gemini

# Claude (Anthropic) settings — required if LLM_PROVIDER=claude
# Example model: claude-3-5-sonnet-20240620
CLAUDE_MODEL=
ANTHROPIC_API_KEY=

# Gemini (Google) settings — required if LLM_PROVIDER=gemini
# Default model used by the code is gemini-1.5-pro
GEMINI_MODEL=gemini-1.5-pro
GEMINI_API_KEY=

# Tooling toggle: use uv for subprocess installs (0 or 1)
USE_UV=0

# Optional: used by demo scripts
GITHUB_TOKEN=
